    <ImageButton
        android:id="@+id/stoprunningbutton"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginBottom="56dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="@color/YellowOrange"
        android:text="@string/distanceTextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/stoprunningbutton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="@color/YellowOrange"
        android:text="@string/timeTextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/stoprunningbutton"
        app:layout_constraintEnd_toStartOf="@+id/avgPaceTextView"
        app:layout_constraintStart_toEndOf="@+id/distanceTextView" />

    <TextView
        android:id="@+id/avgPaceTextView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:background="@color/YellowOrange"
        android:text="@string/avgPaceTextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/stoprunningbutton"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>